{
  "version": 2,
  "builds": [
    {
      "src": "Щербина_index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/style/(.*)",    // Путь к CSS
      "dest": "/style/$1"
    },
    {
      "src": "/img/(.*)",      // Путь к изображениям
      "dest": "/img/$1"
    },
    {
      "src": "/(.*)",          // Все остальные запросы → HTML
      "dest": "/Щербина_index.html"
    }
  ]
}